@model Dashboards.Models.ViewModels.DashboardInscripcionesVM

@{
    ViewData["Title"] = "Admisiones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">

    <div class="mb-4">
        <h5 class="fw-bold text-secondary mb-3"><i class="bi bi-person-plus-fill"></i> ADMISIONES Y NUEVO INGRESO</h5>
        <div class="d-flex gap-2 flex-wrap">
            <button class="btn btn-sm px-4 fw-bold rounded-pill shadow-sm text-white" style="background-color: #009669; border: none;">
                <i class="bi bi-funnel-fill"></i> Proceso Actual (2026)
            </button>
            <button class="btn btn-light border btn-sm px-4 fw-bold rounded-pill shadow-sm text-secondary">
                <i class="bi bi-clock-history"></i> Comparativo Histórico
            </button>
            <button class="btn btn-light border btn-sm px-4 fw-bold rounded-pill shadow-sm text-secondary">
                <i class="bi bi-bullseye"></i> Metas de Captación
            </button>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">META NUEVO INGRESO</p>
                        <h3 class="mb-0 fw-bold text-secondary">@Model.MetaNuevosIngresos</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-secondary">
                        <i class="bi bi-flag fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">FICHAS VENDIDAS</p>
                        <h3 class="mb-0 fw-bold text-info">@Model.FichasVendidas</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-info">
                        <i class="bi bi-ticket-detailed fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">INSCRITOS REALES</p>
                        <h3 class="mb-0 fw-bold text-utt">@Model.InscritosReales</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-utt">
                        <i class="bi bi-person-check-fill fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <p class="text-muted small fw-bold mb-0">CUMPLIMIENTO DE META</p>
                        <h5 class="mb-0 fw-bold text-warning">@Model.PorcentajeCumplimiento%</h5>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: @Model.PorcentajeCumplimiento%; background-color: #009669;" aria-valuenow="@Model.PorcentajeCumplimiento" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-7 mb-4 mb-lg-0">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-4">
                    <h6 class="text-secondary fw-bold mb-4">EMBUDO DE CONVERSIÓN (DROP-OFF)</h6>
                    <div style="height: 250px;">
                        <canvas id="chartEmbudo"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-4">
                    <h6 class="text-secondary fw-bold mb-4">NUEVOS INSCRITOS POR CARRERA</h6>
                    <div style="height: 250px;">
                        <canvas id="chartCarrerasInsc"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4 rounded-3">
        <div class="card-body bg-white p-4">
            <h6 class="text-secondary fw-bold mb-4"><i class="bi bi-card-checklist"></i> ESTADO DE TRÁMITE DE ASPIRANTES (RECIENTES)</h6>

            <div class="table-responsive mt-3">
                <table id="tablaAspirantes" class="table table-hover align-middle" style="width:100%">
                    <thead class="bg-utt text-white small text-center align-middle">
                        <tr>
                            <th>FOLIO</th>
                            <th>NOMBRE DEL ASPIRANTE</th>
                            <th>CARRERA SOLICITADA</th>
                            <th>PREPARATORIA DE ORIGEN</th>
                            <th>FECHA REGISTRO</th>
                            <th>ESTATUS</th>
                        </tr>
                    </thead>
                    <tbody class="small text-center">
                        <tr>
                            <td class="fw-bold">F-26001</td>
                            <td>MARTÍNEZ RUIZ, CARLOS</td>
                            <td>TECNOLOGÍAS DE LA INFORMACIÓN</td>
                            <td class="text-muted">CBTIS 7</td>
                            <td>10/02/2026</td>
                            <td><span class="badge rounded-pill" style="background-color: #009669;">Inscrito</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">F-26002</td>
                            <td>GARCÍA LÓPEZ, ANA</td>
                            <td>MECATRÓNICA</td>
                            <td class="text-muted">CONALEP 129</td>
                            <td>12/02/2026</td>
                            <td><span class="badge rounded-pill bg-info text-white">Aceptado</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">F-26003</td>
                            <td>HERNÁNDEZ PÉREZ, LUIS</td>
                            <td>ADMINISTRACIÓN</td>
                            <td class="text-muted">COBAT 17</td>
                            <td>15/02/2026</td>
                            <td><span class="badge rounded-pill bg-warning text-dark">Examen Pendiente</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">F-26004</td>
                            <td>SÁNCHEZ DÍAZ, MARÍA</td>
                            <td>MANTENIMIENTO INDUSTRIAL</td>
                            <td class="text-muted">CETIS 71</td>
                            <td>18/02/2026</td>
                            <td><span class="badge rounded-pill bg-secondary text-white">Ficha Pagada</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">F-26005</td>
                            <td>RODRÍGUEZ GÓMEZ, JOSÉ</td>
                            <td>INDUSTRIAL</td>
                            <td class="text-muted">CBTIS 276</td>
                            <td>20/02/2026</td>
                            <td><span class="badge rounded-pill bg-danger text-white">Documentación Incompleta</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // 1. DATATABLES (Buscador y Excel)
            $('#tablaAspirantes').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                dom: '<"row align-items-center mb-3"<"col-md-6"B><"col-md-6 d-flex justify-content-end"f>>rt<"row align-items-center mt-3"<"col-md-6"i><"col-md-6 d-flex justify-content-end"p>>',
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="bi bi-file-earmark-excel-fill"></i> Descargar Padrón de Aspirantes',
                        className: 'btn btn-utt btn-sm shadow-sm',
                        title: 'Aspirantes_Nuevo_Ingreso_UTTN'
                    }
                ],
                pageLength: 5,
                ordering: true
            });

            // 2. GRÁFICA DE BARRAS (Embudo de conversión)
            var ctxEmbudo = document.getElementById("chartEmbudo").getContext('2d');
            new Chart(ctxEmbudo, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.EtiquetasEmbudo)),
                    datasets: [{
                        label: "Aspirantes",
                        // Usamos la paleta de colores para mostrar cómo baja el volumen
                        backgroundColor: ["#0dcaf0", "#ffc107", "#e83e8c", "#009669"],
                        data: @Html.Raw(Json.Serialize(Model.ValoresEmbudo)),
                        barPercentage: 0.5
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { beginAtZero: true, grid: { borderDash: [2, 4] } },
                        x: { grid: { display: false } }
                    }
                }
            });

            // 3. GRÁFICA DE DONA (Inscritos por Carrera)
            var ctxCarreras = document.getElementById("chartCarrerasInsc").getContext('2d');
            new Chart(ctxCarreras, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.EtiquetasCarreras)),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(Model.ValoresInscritos)),
                        backgroundColor: [
                            '#009669', // Verde UTTN
                            '#e83e8c', // Magenta UTTN
                            '#0dcaf0', // Info
                            '#ffc107', // Warning
                            '#6c757d'  // Secondary
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    cutout: '60%',
                    plugins: {
                        legend: { position: 'right', labels: { boxWidth: 12, font: { size: 10 } } }
                    }
                }
            });
        });
    </script>
}