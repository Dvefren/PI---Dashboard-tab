                            <td class="text-muted">2</td>
                            <td><span class="badge" style="background-color: #f8d7da; color: #dc3545;">0</span></td>
                            <td><span class="badge" style="background-color: #f8d7da; color: #dc3545;">0</span></td>
                            <td><span class="badge" style="background-color: #fff3cd; color: #856404;">0</span></td>
                            <td><span class="badge" style="background-color: #e2e3e5; color: #383d41;">0</span></td>
                        </tr>
                        <tr>
                            <td class="text-muted">10A</td>
                            <td>MECATRÓNICA</td>
                            <td class="text-muted">INGENIERÍA MECATRÓNICA</td>
                            <td class="text-muted">VESPERTINO</td>
                            <td class="text-muted">ENERO - ABRIL</td>
                            <td>18</td>
                            <td class="text-muted">16</td>
                            <td class="text-muted">2</td>
                            <td><span class="badge" style="background-color: #f8d7da; color: #dc3545;">0</span></td>
                            <td><span class="badge" style="background-color: #f8d7da; color: #dc3545;">3</span></td>
                            <td><span class="badge" style="background-color: #fff3cd; color: #856404;">3</span></td>
                            <td><span class="badge" style="background-color: #e2e3e5; color: #383d41;">0</span></td>
                        </tr>
                        <tr>
                            <td class="text-muted">10A</td>
                            <td>INDUSTRIAL</td>
                            <td class="text-muted">INGENIERÍA EN PROCESOS Y OPERACIONES</td>
                            <td class="text-muted">VESPERTINO</td>
