<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UTT</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.bootstrap5.min.css">

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        /* ========================================= */
        /* PALETA DE COLORES OFICIAL UTTN            */
        /* ========================================= */
        :root {
            --utt-green: #009669; /* Verde institucional */
            --utt-green-dark: #007652; /* Verde para hover */
            --utt-magenta: #e83e8c; /* Rosa/Magenta de gráficas de arrastre */
            --utt-gray-light: #f8f9fa; /* Fondo general */
        }

        body {
            background-color: var(--utt-gray-light);
        }

        /* Clases personalizadas que usaremos en las vistas */
        .bg-utt {
            background-color: var(--utt-green) !important;
            color: white;
        }

        .text-utt {
            color: var(--utt-green) !important;
        }

        .border-utt {
            border-color: var(--utt-green) !important;
        }

        /* Botón Exportar a Excel UTTN */
        .btn-utt {
            background-color: var(--utt-green);
            color: white;
            border: none;
        }

            .btn-utt:hover {
                background-color: var(--utt-green-dark);
                color: white;
            }

        /* Estilo del menú lateral */
        .sidebar-link:hover {
            background-color: rgba(255,255,255,0.1);
            border-radius: 5px;
        }

        /* Hacer que la paginación (1, 2, 3...) de la tabla sea verde */
        .page-item.active .page-link {
            background-color: var(--utt-green) !important;
            border-color: var(--utt-green) !important;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">

            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark shadow">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-4 text-white min-vh-100 sticky-top">

                    <a href="/Dashboard" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <i class="bi bi-bar-chart-fill fs-3 text-success"></i>
                        <span class="fs-5 d-none d-sm-inline ms-2 fw-bold">UTT</span>
                    </a>
                    <hr class="w-100 text-secondary">

                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start w-100" id="menu">
                        <li class="nav-item w-100 mb-1">
                            <a href="/Dashboard" class="nav-link text-white sidebar-link px-2 align-middle">
                                <i class="fs-5 bi-speedometer2 text-primary"></i> <span class="ms-2 d-none d-sm-inline">Rectoría</span>
                            </a>
                        </li>
                        <li class="w-100 mt-3 mb-1 d-none d-sm-inline"><span class="text-secondary small fw-bold text-uppercase">Bienestar</span></li>
                        <li class="nav-item w-100 mb-1">
                            <a href="/Tutorias" class="nav-link text-white sidebar-link px-2 align-middle">
                                <i class="fs-5 bi-person-hearts text-danger"></i> <span class="ms-2 d-none d-sm-inline">Tutorías</span>
                            </a>
                        </li>
                        <li class="nav-item w-100 mb-1">
                            <a href="/Calificaciones" class="nav-link text-white sidebar-link px-2 align-middle">
                                <i class="fs-5 bi-journal-check text-success"></i> <span class="ms-2 d-none d-sm-inline">Calidad Académica</span>
                            </a>
                        </li>
                        <li class="nav-item w-100 mb-1">
                            <a href="/Medico" class="nav-link text-white sidebar-link px-2 align-middle">
                                <i class="fs-5 bi-heart-pulse text-info"></i> <span class="ms-2 d-none d-sm-inline">Médico</span>
                            </a>
                        </li>
                        <li class="w-100 mt-3 mb-1 d-none d-sm-inline"><span class="text-secondary small fw-bold text-uppercase">Administración</span></li>
                        <li class="nav-item w-100 mb-1">
                            <a href="/Inscripciones" class="nav-link text-white sidebar-link px-2 align-middle">
                                <i class="fs-5 bi-person-plus text-warning"></i> <span class="ms-2 d-none d-sm-inline">Admisiones</span>
                            </a>
                        </li>
                        <li class="nav-item w-100 mb-1">
                            <a href="/Tramites" class="nav-link text-white sidebar-link px-2 align-middle">
                                <i class="fs-5 bi-folder2-open text-secondary"></i> <span class="ms-2 d-none d-sm-inline">Trámites</span>
                            </a>
                        </li>
                        <li class="w-100 mt-3 mb-1 d-none d-sm-inline"><span class="text-secondary small fw-bold text-uppercase">Industria</span></li>
                        <li class="nav-item w-100 mb-1">
                            <a href="/Vinculacion" class="nav-link text-white sidebar-link px-2 align-middle">
                                <i class="fs-5 bi-building text-light"></i> <span class="ms-2 d-none d-sm-inline">Vinculación</span>
                            </a>
                        </li>
                    </ul>
                    <hr class="w-100 text-secondary">

                    <div class="dropdown pb-4 w-100">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle fs-4"></i>
                            <span class="d-none d-sm-inline mx-2">Admin UTT</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                            <li><a class="dropdown-item" href="#">Cerrar Sesión</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col p-0 d-flex flex-column min-vh-100" style="background-color: var(--utt-gray-light);">
                <main class="flex-grow-1 p-4">
                    @RenderBody()
                </main>
                <footer class="border-top bg-white text-muted py-3 text-center shadow-sm">
                    <div class="container-fluid">
                        <small>&copy; 2026 - Proyecto Integrador - UTT</small>
                    </div>
                </footer>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>

    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>