@model Dashboards.Models.ViewModels.DashboardMedicoVM

@{
    ViewData["Title"] = "Servicios Médicos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">

    <div class="mb-4">
        <h5 class="fw-bold text-secondary mb-3"><i class="bi bi-heart-pulse-fill"></i> SALUD INTEGRAL Y PSICOLOGÍA</h5>
        <div class="d-flex gap-2 flex-wrap">
            <button class="btn btn-sm px-4 fw-bold rounded-pill shadow-sm text-white" style="background-color: #009669; border: none;">
                <i class="bi bi-activity"></i> Resumen Diario
            </button>
            <button class="btn btn-light border btn-sm px-4 fw-bold rounded-pill shadow-sm text-secondary">
                <i class="bi bi-person-hearts"></i> Casos Psicológicos
            </button>
            <button class="btn btn-light border btn-sm px-4 fw-bold rounded-pill shadow-sm text-secondary">
                <i class="bi bi-capsule"></i> Inventario Farmacia
            </button>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">CONSULTAS HOY</p>
                        <h3 class="mb-0 fw-bold text-info">@Model.ConsultasHoy</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-info">
                        <i class="bi bi-clipboard2-pulse fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">ATENCIÓN PSICOLÓGICA</p>
                        <h3 class="mb-0 fw-bold text-warning">@Model.CasosPsicologia</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-warning">
                        <i class="bi bi-person-hearts fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">EMERGENCIAS / TRASLADOS</p>
                        <h3 class="mb-0 fw-bold text-danger">@Model.TrasladosEmergencia</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-danger">
                        <i class="bi bi-ambulance fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">MEDICAMENTOS ENTREGADOS</p>
                        <h3 class="mb-0 fw-bold text-utt">@Model.MedicamentosEntregados</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-utt">
                        <i class="bi bi-capsule fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8 mb-4 mb-lg-0">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-4">
                    <h6 class="text-secondary fw-bold mb-4">TOP 5: MOTIVOS DE CONSULTA MÉDICA (MENSUAL)</h6>
                    <div style="height: 250px;">
                        <canvas id="chartDiagnosticos"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-4">
                    <h6 class="text-secondary fw-bold mb-4">ATENCIÓN POR ÁREA</h6>
                    <div style="height: 250px;">
                        <canvas id="chartAreas"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4 rounded-3">
        <div class="card-body bg-white p-4">
            <h6 class="text-secondary fw-bold mb-4"><i class="bi bi-journal-medical"></i> BITÁCORA DE ATENCIÓN DE HOY</h6>

            <div class="table-responsive mt-3">
                <table id="tablaMedico" class="table table-hover align-middle" style="width:100%">
                    <thead class="bg-utt text-white small text-center align-middle">
                        <tr>
                            <th>HORA</th>
                            <th>PACIENTE (MATRÍCULA)</th>
                            <th>CARRERA</th>
                            <th>ÁREA</th>
                            <th>MOTIVO PRINCIPAL</th>
                            <th>ESTATUS</th>
                        </tr>
                    </thead>
                    <tbody class="small text-center">
                        <tr>
                            <td class="text-muted">08:15 AM</td>
                            <td class="fw-bold">210987 - J. PÉREZ</td>
                            <td>MECATRÓNICA</td>
                            <td><span class="badge bg-info text-white">Médico General</span></td>
                            <td>Dolor de cabeza / Migraña</td>
                            <td><span class="badge rounded-pill" style="background-color: #009669;">Atendido</span></td>
                        </tr>
                        <tr>
                            <td class="text-muted">09:30 AM</td>
                            <td class="fw-bold">220145 - M. LÓPEZ</td>
                            <td>TECNOLOGÍAS DE LA INFORMACIÓN</td>
                            <td><span class="badge bg-warning text-dark">Psicología</span></td>
                            <td>Ataque de ansiedad</td>
                            <td><span class="badge rounded-pill bg-secondary text-white">En Sesión</span></td>
                        </tr>
                        <tr>
                            <td class="text-muted">11:00 AM</td>
                            <td class="fw-bold">190332 - R. GÓMEZ</td>
                            <td>MANTENIMIENTO</td>
                            <td><span class="badge bg-info text-white">Médico General</span></td>
                            <td>Lesión leve en taller</td>
                            <td><span class="badge rounded-pill" style="background-color: #009669;">Atendido</span></td>
                        </tr>
                        <tr>
                            <td class="text-muted">12:45 PM</td>
                            <td class="fw-bold">230012 - S. RAMÍREZ</td>
                            <td>ADMINISTRACIÓN</td>
                            <td><span class="badge bg-info text-white">Médico General</span></td>
                            <td>Cuadro respiratorio</td>
                            <td><span class="badge rounded-pill bg-danger text-white">Reposo Sugerido</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // 1. DATATABLES (Buscador y Excel)
            $('#tablaMedico').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                dom: '<"row align-items-center mb-3"<"col-md-6"B><"col-md-6 d-flex justify-content-end"f>>rt<"row align-items-center mt-3"<"col-md-6"i><"col-md-6 d-flex justify-content-end"p>>',
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="bi bi-file-earmark-excel-fill"></i> Descargar Bitácora Diaria',
                        className: 'btn btn-utt btn-sm shadow-sm',
                        title: 'Bitacora_Medica_UTTN'
                    }
                ],
                pageLength: 5,
                ordering: true
            });

            // 2. GRÁFICA DE BARRAS HORIZONTALES (Diagnósticos - Usamos el Magenta UTTN)
            var ctxDiag = document.getElementById("chartDiagnosticos").getContext('2d');
            new Chart(ctxDiag, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.EtiquetasDiagnosticos)),
                    datasets: [{
                        label: "Pacientes",
                        backgroundColor: "#e83e8c", // Magenta UTTN
                        hoverBackgroundColor: "#c23074",
                        data: @Html.Raw(Json.Serialize(Model.ValoresDiagnosticos)),
                        barPercentage: 0.6
                    }],
                },
                options: {
                    indexAxis: 'y', // La hace horizontal
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        x: { beginAtZero: true, grid: { borderDash: [2, 4] } },
                        y: { grid: { display: false } }
                    }
                }
            });

            // 3. GRÁFICA DE DONA (Áreas de atención)
            var ctxArea = document.getElementById("chartAreas").getContext('2d');
            new Chart(ctxArea, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.EtiquetasAreas)),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(Model.ValoresAreas)),
                        backgroundColor: [
                            '#0dcaf0', // Azul (Medicina General)
                            '#ffc107', // Amarillo (Psicología)
                            '#009669'  // Verde (Nutrición/Otro)
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    cutout: '60%',
                    plugins: {
                        legend: { position: 'bottom', labels: { boxWidth: 12, font: { size: 10 } } }
                    }
                }
            });
        });
    </script>
}