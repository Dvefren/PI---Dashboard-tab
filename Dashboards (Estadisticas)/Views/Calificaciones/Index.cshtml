@model Dashboards.Models.ViewModels.DashboardCalificacionesVM

@{
    ViewData["Title"] = "Calidad Académica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">

    <div class="mb-4">
        <h5 class="fw-bold text-secondary mb-3"><i class="bi bi-journal-text"></i> RENDIMIENTO ACADÉMICO</h5>
        <div class="d-flex gap-2 flex-wrap">
            <button class="btn btn-sm px-4 fw-bold rounded-pill shadow-sm text-white" style="background-color: #009669; border: none;">
                <i class="bi bi-bar-chart-fill"></i> Cuatrimestre Actual
            </button>
            <button class="btn btn-light border btn-sm px-4 fw-bold rounded-pill shadow-sm text-secondary">
                <i class="bi bi-clock-history"></i> Histórico Anual
            </button>
            <button class="btn btn-light border btn-sm px-4 fw-bold rounded-pill shadow-sm text-secondary">
                <i class="bi bi-award"></i> Cuadro de Honor
            </button>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">PROMEDIO GENERAL</p>
                        <h3 class="mb-0 fw-bold text-utt">@Model.PromedioGeneral</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-utt">
                        <i class="bi bi-123 fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">ÍNDICE DE APROBACIÓN</p>
                        <h3 class="mb-0 fw-bold text-success">@Model.IndiceAprobacion%</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-success">
                        <i class="bi bi-check-circle-fill fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">EN EXTRAORDINARIO</p>
                        <h3 class="mb-0 fw-bold text-danger">@Model.AlumnosEnExtraordinario</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-danger">
                        <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">EXÁMENES APLICADOS</p>
                        <h3 class="mb-0 fw-bold text-info">@Model.TotalExamenesAplicados</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-info">
                        <i class="bi bi-pencil-square fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8 mb-4 mb-lg-0">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-4">
                    <h6 class="text-secondary fw-bold mb-4">TOP MATERIAS CON MAYOR REPROBACIÓN</h6>
                    <div style="height: 250px;">
                        <canvas id="chartMaterias"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-4">
                    <h6 class="text-secondary fw-bold mb-4">DISTRIBUCIÓN DE NOTAS</h6>
                    <div style="height: 250px;">
                        <canvas id="chartDistribucion"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4 rounded-3">
        <div class="card-body bg-white p-4">
            <h6 class="text-secondary fw-bold mb-4"><i class="bi bi-table"></i> DESGLOSE DE RENDIMIENTO POR GRUPO</h6>

            <div class="table-responsive mt-3">
                <table id="tablaCalificaciones" class="table table-hover align-middle" style="width:100%">
                    <thead class="bg-utt text-white small text-center align-middle">
                        <tr>
                            <th>GRUPO</th>
                            <th>CARRERA</th>
                            <th>TURNO</th>
                            <th>ALUMNOS EVALUADOS</th>
                            <th>PROMEDIO GRUPAL</th>
                            <th>APROBACIÓN</th>
                            <th>ESTATUS</th>
                        </tr>
                    </thead>
                    <tbody class="small text-center">
                        <tr>
                            <td class="fw-bold">10A</td>
                            <td>TECNOLOGÍAS DE LA INFORMACIÓN</td>
                            <td class="text-muted">VESPERTINO</td>
                            <td>28</td>
                            <td class="fw-bold">9.2</td>
                            <td>95%</td>
                            <td><span class="badge rounded-pill" style="background-color: #009669;">Excelente</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">10A</td>
                            <td>MECATRÓNICA</td>
                            <td class="text-muted">VESPERTINO</td>
                            <td>18</td>
                            <td class="fw-bold">7.8</td>
                            <td>65%</td>
                            <td><span class="badge rounded-pill bg-warning text-dark">Atención</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">10B</td>
                            <td>INDUSTRIAL</td>
                            <td class="text-muted">MATUTINO</td>
                            <td>35</td>
                            <td class="fw-bold">8.5</td>
                            <td>88%</td>
                            <td><span class="badge rounded-pill bg-info text-white">Bueno</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">11A</td>
                            <td>MANTENIMIENTO INDUSTRIAL</td>
                            <td class="text-muted">VESPERTINO</td>
                            <td>31</td>
                            <td class="fw-bold">6.9</td>
                            <td>45%</td>
                            <td><span class="badge rounded-pill bg-danger">Crítico</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">10C</td>
                            <td>ADMINISTRACIÓN</td>
                            <td class="text-muted">MATUTINO</td>
                            <td>40</td>
                            <td class="fw-bold">8.9</td>
                            <td>92%</td>
                            <td><span class="badge rounded-pill" style="background-color: #009669;">Excelente</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // 1. INICIALIZAR TABLA DATATABLES (Buscador y Excel)
            $('#tablaCalificaciones').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                dom: '<"row align-items-center mb-3"<"col-md-6"B><"col-md-6 d-flex justify-content-end"f>>rt<"row align-items-center mt-3"<"col-md-6"i><"col-md-6 d-flex justify-content-end"p>>',
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="bi bi-file-earmark-excel-fill"></i> Descargar Reporte de Promedios',
                        className: 'btn btn-utt btn-sm shadow-sm',
                        title: 'Reporte_Promedios_UTTN'
                    }
                ],
                pageLength: 5,
                ordering: true
            });

            // 2. GRÁFICA DE BARRAS (Materias Reprobadas - Color Magenta)
            var ctxMat = document.getElementById("chartMaterias").getContext('2d');
            new Chart(ctxMat, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.MateriasDificiles)),
                    datasets: [{
                        label: "Alumnos Reprobados",
                        backgroundColor: "#e83e8c", // Magenta UTTN
                        hoverBackgroundColor: "#c23074",
                        data: @Html.Raw(Json.Serialize(Model.CantidadReprobados)),
                        barPercentage: 0.6
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { beginAtZero: true, grid: { borderDash: [2, 4] } },
                        x: { grid: { display: false } }
                    }
                }
            });

            // 3. GRÁFICA DE DONA (Distribución de Notas)
            var ctxDist = document.getElementById("chartDistribucion").getContext('2d');
            new Chart(ctxDist, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.EtiquetasDistribucion)),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(Model.ValoresDistribucion)),
                        backgroundColor: [
                            '#009669', // Verde (10)
                            '#0dcaf0', // Azul claro (9)
                            '#ffc107', // Amarillo (8)
                            '#fd7e14', // Naranja (7)
                            '#dc3545'  // Rojo (Reprobado)
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    cutout: '60%',
                    plugins: {
                        legend: { position: 'right', labels: { boxWidth: 12, font: { size: 10 } } }
                    }
                }
            });
        });
    </script>
}