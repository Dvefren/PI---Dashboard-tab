@{
    ViewData["Title"] = "Dashboard Principal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Panel de Control UTT</h1>
    <p>Bienvenido al Sistema de Gestión Integral - Módulo de Estadísticas</p>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Alumnos Activos</div>
            <div class="card-body">
                <h5 class="card-title">2,450</h5>
                <p class="card-text">Total inscritos este cuatrimestre.</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Promedio General</div>
            <div class="card-body">
                <h5 class="card-title">8.7</h5>
                <p class="card-text">Calificación media de la universidad.</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-warning mb-3">
            <div class="card-header">Trámites Pendientes</div>
            <div class="card-body">
                <h5 class="card-title">15</h5>
                <p class="card-text">Solicitudes requieren atención.</p>
            </div>
        </div>
    </div>
</div>