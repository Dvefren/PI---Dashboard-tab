@model Dashboards.Models.ViewModels.DashboardTramitesVM

@{
    ViewData["Title"] = "Gestión de Trámites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">

    <div class="mb-4">
        <h5 class="fw-bold text-secondary mb-3"><i class="bi bi-folder2-open"></i> CONTROL DE TRÁMITES Y VENTANILLA</h5>
        <div class="d-flex gap-2 flex-wrap">
            <button class="btn btn-sm px-4 fw-bold rounded-pill shadow-sm text-white" style="background-color: #009669; border: none;">
                <i class="bi bi-inbox-fill"></i> Solicitudes Activas
            </button>
            <button class="btn btn-light border btn-sm px-4 fw-bold rounded-pill shadow-sm text-secondary">
                <i class="bi bi-clock-history"></i> Historial de Trámites
            </button>
            <button class="btn btn-light border btn-sm px-4 fw-bold rounded-pill shadow-sm text-secondary">
                <i class="bi bi-cash-stack"></i> Corte de Caja
            </button>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">SOLICITUDES DE HOY</p>
                        <h3 class="mb-0 fw-bold text-info">@Model.SolicitudesNuevas</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-info">
                        <i class="bi bi-file-earmark-plus-fill fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">TRÁMITES EN PROCESO</p>
                        <h3 class="mb-0 fw-bold text-warning">@Model.TramitesEnProceso</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-warning">
                        <i class="bi bi-gear-fill fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">TIEMPO PROMEDIO</p>
                        <h3 class="mb-0 fw-bold text-secondary">@Model.TiempoRespuestaPromedio <span class="fs-6 text-muted">Días</span></h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-secondary">
                        <i class="bi bi-stopwatch-fill fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">INGRESOS DEL MES</p>
                        <h3 class="mb-0 fw-bold text-utt">@Model.IngresosMensuales.ToString("C")</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-utt">
                        <i class="bi bi-currency-dollar fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8 mb-4 mb-lg-0">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-4">
                    <h6 class="text-secondary fw-bold mb-4">VOLUMEN POR TIPO DE TRÁMITE</h6>
                    <div style="height: 250px;">
                        <canvas id="chartTipos"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-4">
                    <h6 class="text-secondary fw-bold mb-4">SEMÁFORO DE ENTREGAS</h6>
                    <div style="height: 250px;">
                        <canvas id="chartTiempos"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4 rounded-3">
        <div class="card-body bg-white p-4">
            <h6 class="text-secondary fw-bold mb-4"><i class="bi bi-ui-checks"></i> BANDEJA DE SOLICITUDES RECIENTES</h6>

            <div class="table-responsive mt-3">
                <table id="tablaTramites" class="table table-hover align-middle" style="width:100%">
                    <thead class="bg-utt text-white small text-center align-middle">
                        <tr>
                            <th>FOLIO SOLICITUD</th>
                            <th>ALUMNO (MATRÍCULA)</th>
                            <th>TIPO DE TRÁMITE</th>
                            <th>FECHA SOLICITUD</th>
                            <th>ESTATUS / VENCIMIENTO</th>
                            <th>COSTO</th>
                        </tr>
                    </thead>
                    <tbody class="small text-center">
                        <tr>
                            <td class="fw-bold text-primary">TRM-8901</td>
                            <td class="text-muted">210987 - J. PÉREZ</td>
                            <td class="fw-bold">Constancia de Estudios</td>
                            <td>22/02/2026</td>
                            <td><span class="badge rounded-pill" style="background-color: #009669;">A Tiempo (Faltan 2 días)</span></td>
                            <td>$50.00</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-primary">TRM-8902</td>
                            <td class="text-muted">220145 - M. LÓPEZ</td>
                            <td class="fw-bold">Kardex de Calificaciones</td>
                            <td>20/02/2026</td>
                            <td><span class="badge rounded-pill bg-warning text-dark">Por Vencer (Hoy)</span></td>
                            <td>$80.00</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-primary">TRM-8903</td>
                            <td class="text-muted">190332 - R. GÓMEZ</td>
                            <td class="fw-bold">Reposición de Credencial</td>
                            <td>15/02/2026</td>
                            <td><span class="badge rounded-pill bg-danger text-white">Retrasado (3 días)</span></td>
                            <td>$150.00</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-primary">TRM-8904</td>
                            <td class="text-muted">230012 - S. RAMÍREZ</td>
                            <td class="fw-bold">Certificado Parcial</td>
                            <td>24/02/2026</td>
                            <td><span class="badge rounded-pill" style="background-color: #009669;">A Tiempo (Faltan 5 días)</span></td>
                            <td>$350.00</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-primary">TRM-8905</td>
                            <td class="text-muted">221100 - A. MARTÍNEZ</td>
                            <td class="fw-bold">Constancia de Estudios</td>
                            <td>24/02/2026</td>
                            <td><span class="badge rounded-pill bg-secondary text-white">Pendiente de Pago</span></td>
                            <td>$50.00</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // 1. DATATABLES (Buscador y Excel)
            $('#tablaTramites').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                dom: '<"row align-items-center mb-3"<"col-md-6"B><"col-md-6 d-flex justify-content-end"f>>rt<"row align-items-center mt-3"<"col-md-6"i><"col-md-6 d-flex justify-content-end"p>>',
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="bi bi-file-earmark-excel-fill"></i> Descargar Reporte de Ventanilla',
                        className: 'btn btn-utt btn-sm shadow-sm',
                        title: 'Reporte_Tramites_UTTN'
                    }
                ],
                pageLength: 5,
                ordering: true
            });

            // 2. GRÁFICA DE BARRAS (Tipos de Trámite)
            var ctxTipos = document.getElementById("chartTipos").getContext('2d');
            new Chart(ctxTipos, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.EtiquetasTiposTramite)),
                    datasets: [{
                        label: "Solicitudes",
                        backgroundColor: "#0dcaf0", // Azul claro (Info)
                        hoverBackgroundColor: "#0bacce",
                        data: @Html.Raw(Json.Serialize(Model.ValoresTiposTramite)),
                        barPercentage: 0.5
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { beginAtZero: true, grid: { borderDash: [2, 4] } },
                        x: { grid: { display: false } }
                    }
                }
            });

            // 3. GRÁFICA DE DONA (Semáforo de Estatus)
            var ctxTiempos = document.getElementById("chartTiempos").getContext('2d');
            new Chart(ctxTiempos, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.EtiquetasEstatus)),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(Model.ValoresEstatus)),
                        // Verde UTTN (A tiempo), Amarillo (Por Vencer), Rojo (Retrasado)
                        backgroundColor: ['#009669', '#ffc107', '#dc3545'],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    cutout: '60%',
                    plugins: {
                        legend: { position: 'bottom', labels: { boxWidth: 12, font: { size: 10 } } }
                    }
                }
            });
        });
    </script>
}