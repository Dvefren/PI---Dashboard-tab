@model Dashboards.Models.ViewModels.DashboardTutoriasVM

@{
    ViewData["Title"] = "Tutorías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">

    <div class="mb-4">
        <h5 class="fw-bold text-secondary mb-3"><i class="bi bi-pie-chart-fill"></i> ESTADÍSTICAS ADICIONALES</h5>
        <div class="d-flex gap-2 flex-wrap">
            <button class="btn btn-danger btn-sm px-4 fw-bold rounded-pill shadow-sm">
                <i class="bi bi-person-dash-fill"></i> Estadísticas de Bajas
            </button>
            <button class="btn btn-success btn-sm px-4 fw-bold rounded-pill shadow-sm" style="background-color: #009669; border: none;">
                <i class="bi bi-file-earmark-text-fill"></i> Estadísticas de PATs
            </button>
            <button class="btn btn-warning btn-sm px-4 fw-bold rounded-pill shadow-sm text-dark">
                <i class="bi bi-exclamation-triangle-fill"></i> Estadísticas de Arrastre
            </button>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4 rounded-3">
        <div class="card-body bg-white p-4">
            <h6 class="text-secondary fw-bold mb-4">ESTADÍSTICAS DE MATERIAS EN ARRASTRE</h6>

            <div class="row align-items-center">
                <div class="col-lg-5 mb-4 mb-lg-0">
                    <p class="text-muted small fw-bold mb-3">RESUMEN GENERAL</p>

                    <ul class="list-group list-group-flush small">
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0 border-light">
                            TOTAL DE MATERIAS EN ARRASTRE:
                            <span class="badge rounded-pill" style="background-color: #f8d7da; color: #dc3545;">445</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0 border-light">
                            ALUMNOS CON ARRASTRE:
                            <span class="badge rounded-pill" style="background-color: #fff3cd; color: #856404;">276</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0 border-light">
                            FUERA DE TIEMPO:
                            <span class="badge rounded-pill bg-danger">8</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0 border-light">
                            CRÍTICOS (<80 DÍAS):
                            <span class="badge rounded-pill bg-warning text-dark">0</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0 border-light">
                            MEDIOS (<180 DÍAS):
                            <span class="badge rounded-pill bg-secondary">29</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0 border-light fw-bold">
                            EN TIEMPO:
                            <span class="badge rounded-pill text-white" style="background-color: #009669;">408</span>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-7">
                    <div style="height: 250px;">
                        <canvas id="chartDonaArrastre"></canvas>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-12 text-center">
                    <p class="text-muted small fw-bold mb-3">Materias en Arrastre por Carrera</p>
                    <div style="height: 200px;">
                        <canvas id="chartBarrasArrastre"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4 rounded-3">
        <div class="card-body bg-white p-4">
            <h5 class="text-secondary fw-bold mb-4"><i class="bi bi-people-fill"></i> ESTADÍSTICAS POR GRUPO</h5>

            <div class="table-responsive mt-3">
                <table id="tablaTutorias" class="table table-hover align-middle" style="width:100%">
                    <thead class="bg-utt text-white small text-center align-middle">
