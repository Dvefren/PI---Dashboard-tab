@* Nota: Si tu modelo se llama distinto, ajústalo aquí *@
@model Dashboards.Models.ViewModels.DashboardVM

@{
    ViewData["Title"] = "Rectoría - General";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">

    <div class="mb-4 d-flex justify-content-between align-items-center flex-wrap">
        <div>
            <h5 class="fw-bold text-secondary mb-1"><i class="bi bi-speedometer2"></i> TABLERO DE RECTORÍA</h5>
            <p class="text-muted small mb-0">Visión global e indicadores estratégicos de la institución</p>
        </div>
        <div class="d-flex gap-2 mt-2 mt-md-0">
            <button class="btn btn-sm px-4 fw-bold rounded-pill shadow-sm text-white" style="background-color: #009669; border: none;">
                <i class="bi bi-calendar-check"></i> Semestre Actual
            </button>
            <button class="btn btn-light border btn-sm px-4 fw-bold rounded-pill shadow-sm text-secondary">
                <i class="bi bi-calendar3"></i> Ver Anual
            </button>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">MATRÍCULA ACTIVA</p>
                        <h3 class="mb-0 fw-bold text-utt">4,192</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-utt">
                        <i class="bi bi-people-fill fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">APROBACIÓN GLOBAL</p>
                        <h3 class="mb-0 fw-bold text-success">84.5%</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-success">
                        <i class="bi bi-graph-up-arrow fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100" style="border-left: 4px solid #e83e8c !important;">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">ALUMNOS EN RIESGO</p>
                        <h3 class="mb-0 fw-bold" style="color: #e83e8c;">276</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle" style="color: #e83e8c;">
                        <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">RECAUDACIÓN (TRÁMITES)</p>
                        <h3 class="mb-0 fw-bold text-secondary">$154K</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-secondary">
                        <i class="bi bi-bank fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8 mb-4 mb-lg-0">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h6 class="text-secondary fw-bold mb-0">CRECIMIENTO HISTÓRICO DE MATRÍCULA</h6>
                        <span class="badge bg-light text-success border border-success"><i class="bi bi-arrow-up-right"></i> +5.2% vs 2025</span>
                    </div>
                    <div style="height: 250px;">
                        <canvas id="chartCrecimiento"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-4">
                    <h6 class="text-secondary fw-bold mb-4">POBLACIÓN POR NIVEL</h6>
                    <div style="height: 250px;">
                        <canvas id="chartNivel"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4 rounded-3">
        <div class="card-body bg-white p-4">
            <h6 class="text-secondary fw-bold mb-4"><i class="bi bi-grid-3x3-gap-fill"></i> DESEMPEÑO POR DIRECCIÓN ACADÉMICA</h6>

            <div class="table-responsive mt-3">
                <table id="tablaRectoria" class="table table-hover align-middle" style="width:100%">
                    <thead class="bg-utt text-white small text-center align-middle">
                        <tr>
                            <th>DIVISIÓN ACADÉMICA</th>
                            <th>MATRÍCULA TOTAL</th>
                            <th>APROBACIÓN</th>
                            <th>EN RIESGO (TUTORÍAS)</th>
                            <th>COLOCACIÓN (DUAL/ESTADÍA)</th>
                            <th>EVALUACIÓN GLOBAL</th>
                        </tr>
                    </thead>
                    <tbody class="small text-center">
                        <tr>
                            <td class="fw-bold text-start">TECNOLOGÍAS DE LA INFORMACIÓN</td>
                            <td>985</td>
                            <td>88%</td>
                            <td><span class="badge" style="background-color: #f8d7da; color: #dc3545;">45</span></td>
                            <td>92%</td>
                            <td><span class="badge rounded-pill" style="background-color: #009669;">Sobresaliente</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-start">MECATRÓNICA Y ENERGÍAS</td>
                            <td>1,240</td>
                            <td>76%</td>
                            <td><span class="badge" style="background-color: #f8d7da; color: #dc3545;">120</span></td>
                            <td>85%</td>
                            <td><span class="badge rounded-pill bg-warning text-dark">En Observación</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-start">MANTENIMIENTO E INDUSTRIAL</td>
                            <td>1,150</td>
                            <td>82%</td>
                            <td><span class="badge" style="background-color: #f8d7da; color: #dc3545;">85</span></td>
                            <td>88%</td>
                            <td><span class="badge rounded-pill bg-info text-white">Estable</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-start">ADMINISTRACIÓN Y NEGOCIOS</td>
                            <td>817</td>
                            <td>91%</td>
                            <td><span class="badge" style="background-color: #f8d7da; color: #dc3545;">26</span></td>
                            <td>90%</td>
                            <td><span class="badge rounded-pill" style="background-color: #009669;">Sobresaliente</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // 1. DATATABLES (Resumen Ejecutivo)
            $('#tablaRectoria').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                dom: '<"row align-items-center mb-3"<"col-md-6"B><"col-md-6 d-flex justify-content-end"f>>rt<"row align-items-center mt-3"<"col-md-6"i><"col-md-6 d-flex justify-content-end"p>>',
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="bi bi-file-earmark-excel-fill"></i> Reporte Directivo (Excel)',
                        className: 'btn btn-utt btn-sm shadow-sm',
                        title: 'Reporte_Rectoria_UTTN'
                    }
                ],
                pageLength: 5,
                ordering: true
            });

            // 2. GRÁFICA DE LÍNEAS (Crecimiento de Matrícula - Verde UTTN)
            var ctxLine = document.getElementById("chartCrecimiento").getContext('2d');
            new Chart(ctxLine, {
                type: 'line',
                data: {
                    labels: ["2022", "2023", "2024", "2025", "2026"],
                    datasets: [{
                        label: "Estudiantes Inscritos",
                        data: [3200, 3450, 3800, 3980, 4192],
                        borderColor: "#009669", // Verde UTTN
                        backgroundColor: "rgba(0, 150, 105, 0.1)", // Verde transparente para el relleno
                        borderWidth: 3,
                        pointBackgroundColor: "#e83e8c", // Puntos magenta
                        pointBorderColor: "#fff",
                        pointHoverBackgroundColor: "#fff",
                        pointHoverBorderColor: "#e83e8c",
                        pointRadius: 5,
                        pointHoverRadius: 7,
                        fill: true, // Rellena el área bajo la línea
                        tension: 0.3 // Hace la línea curva suavemente
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { beginAtZero: false, grid: { borderDash: [2, 4] } },
                        x: { grid: { display: false } }
                    }
                }
            });

            // 3. GRÁFICA DE DONA (Nivel Académico)
            var ctxNivel = document.getElementById("chartNivel").getContext('2d');
            new Chart(ctxNivel, {
                type: 'doughnut',
                data: {
                    labels: ["TSU", "Ingeniería", "Licenciatura"],
                    datasets: [{
                        data: [2696, 1146, 350], // Basado en tus fotos
                        backgroundColor: [
                            '#009669', // TSU (Verde)
                            '#e83e8c', // Ingeniería (Magenta)
                            '#0dcaf0'  // Licenciatura (Info)
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    cutout: '65%',
                    plugins: {
                        legend: { position: 'bottom', labels: { boxWidth: 12, font: { size: 10 } } }
                    }
                }
            });
        });
    </script>
}