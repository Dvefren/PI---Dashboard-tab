@model Dashboards.Models.ViewModels.DashboardVinculacionVM

@{
    ViewData["Title"] = "Vinculación y DUAL";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">

    <div class="mb-4">
        <h5 class="fw-bold text-secondary mb-3"><i class="bi bi-building"></i> VINCULACIÓN CON EL SECTOR PRODUCTIVO</h5>
        <div class="d-flex gap-2 flex-wrap">
            <button class="btn btn-sm px-4 fw-bold rounded-pill shadow-sm text-white" style="background-color: #009669; border: none;">
                <i class="bi bi-briefcase-fill"></i> Alumnos Activos
            </button>
            <button class="btn btn-light border btn-sm px-4 fw-bold rounded-pill shadow-sm text-secondary">
                <i class="bi bi-journal-bookmark-fill"></i> Convenios Empresariales
            </button>
            <button class="btn btn-light border btn-sm px-4 fw-bold rounded-pill shadow-sm text-secondary">
                <i class="bi bi-graph-up-arrow"></i> Reporte de Empleabilidad
            </button>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">EN ESTADÍAS</p>
                        <h3 class="mb-0 fw-bold text-info">@Model.AlumnosEnEstadias</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-info">
                        <i class="bi bi-person-workspace fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">SERVICIO SOCIAL</p>
                        <h3 class="mb-0 fw-bold text-warning">@Model.AlumnosEnServicio</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-warning">
                        <i class="bi bi-people-fill fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold mb-1">EMPRESAS CONVENIO</p>
                        <h3 class="mb-0 fw-bold text-secondary">@Model.EmpresasConvenio</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle text-secondary">
                        <i class="bi bi-buildings fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <p class="text-muted small fw-bold mb-0">TASA DE CONTRATACIÓN</p>
                        <h5 class="mb-0 fw-bold text-utt">@Model.PorcentajeContratacion%</h5>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: @Model.PorcentajeContratacion%; background-color: #009669;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-7 mb-4 mb-lg-0">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-4">
                    <h6 class="text-secondary fw-bold mb-4">TOP 5: EMPRESAS CON MAYOR RECEPCIÓN DE ALUMNOS</h6>
                    <div style="height: 250px;">
                        <canvas id="chartEmpresas"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-4">
                    <h6 class="text-secondary fw-bold mb-4">ALUMNOS POR MODALIDAD</h6>
                    <div style="height: 250px;">
                        <canvas id="chartModalidad"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4 rounded-3">
        <div class="card-body bg-white p-4">
            <h6 class="text-secondary fw-bold mb-4"><i class="bi bi-person-lines-fill"></i> PADRÓN DE ALUMNOS COLOCADOS</h6>

            <div class="table-responsive mt-3">
                <table id="tablaVinculacion" class="table table-hover align-middle" style="width:100%">
                    <thead class="bg-utt text-white small text-center align-middle">
                        <tr>
                            <th>MATRÍCULA</th>
                            <th>NOMBRE DEL ALUMNO</th>
                            <th>CARRERA</th>
                            <th>EMPRESA ASIGNADA</th>
                            <th>MODALIDAD</th>
                            <th>EVALUACIÓN TUTOR EMPRESARIAL</th>
                        </tr>
                    </thead>
                    <tbody class="small text-center">
                        <tr>
                            <td class="fw-bold">210987</td>
                            <td>HERNÁNDEZ, ANA V.</td>
                            <td>TECNOLOGÍAS DE LA INFORMACIÓN</td>
                            <td class="text-muted">Desarrollo de Software Local SA</td>
                            <td><span class="badge rounded-pill" style="background-color: #009669;">Estadía Profesional</span></td>
                            <td><span class="badge bg-success text-white">95 - Excelente</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">220145</td>
                            <td>LÓPEZ, MARCOS</td>
                            <td>MECATRÓNICA</td>
                            <td class="text-muted">Maquiladora Ensambles Norte</td>
                            <td><span class="badge rounded-pill bg-info text-dark">Modelo DUAL</span></td>
                            <td><span class="badge bg-warning text-dark">Pendiente</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">190332</td>
                            <td>GÓMEZ, ROBERTO</td>
                            <td>ADMINISTRACIÓN</td>
                            <td class="text-muted">Gobierno Municipal</td>
                            <td><span class="badge rounded-pill bg-secondary text-white">Servicio Social</span></td>
                            <td><span class="badge bg-success text-white">100 - Excelente</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">230012</td>
                            <td>RAMÍREZ, SOFÍA</td>
                            <td>LOGÍSTICA INTERNACIONAL</td>
                            <td class="text-muted">Logística y Aduanas Transfronterizas</td>
                            <td><span class="badge rounded-pill" style="background-color: #009669;">Estadía Profesional</span></td>
                            <td><span class="badge bg-info text-white">85 - Bueno</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">221100</td>
                            <td>MARTÍNEZ, ALEJANDRO</td>
                            <td>MANTENIMIENTO INDUSTRIAL</td>
                            <td class="text-muted">Parque Industrial Norte</td>
                            <td><span class="badge rounded-pill bg-info text-dark">Modelo DUAL</span></td>
                            <td><span class="badge bg-danger text-white">60 - Deficiente</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // 1. DATATABLES (Buscador y Excel)
            $('#tablaVinculacion').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                dom: '<"row align-items-center mb-3"<"col-md-6"B><"col-md-6 d-flex justify-content-end"f>>rt<"row align-items-center mt-3"<"col-md-6"i><"col-md-6 d-flex justify-content-end"p>>',
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="bi bi-file-earmark-excel-fill"></i> Descargar Padrón de Vinculación',
                        className: 'btn btn-utt btn-sm shadow-sm',
                        title: 'Padron_Alumnos_Vinculacion_UTTN'
                    }
                ],
                pageLength: 5,
                ordering: true
            });

            // 2. GRÁFICA DE BARRAS HORIZONTALES (Empresas Receptoras)
            var ctxEmpresas = document.getElementById("chartEmpresas").getContext('2d');
            new Chart(ctxEmpresas, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.EtiquetasEmpresas)),
                    datasets: [{
                        label: "Alumnos Colocados",
                        backgroundColor: "#e83e8c", // Magenta UTTN
                        hoverBackgroundColor: "#c23074",
                        data: @Html.Raw(Json.Serialize(Model.ValoresAlumnosPorEmpresa)),
                        barPercentage: 0.5
                    }],
                },
                options: {
                    indexAxis: 'y', // La hace horizontal
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        x: { beginAtZero: true, grid: { borderDash: [2, 4] } },
                        y: { grid: { display: false } }
                    }
                }
            });

            // 3. GRÁFICA DE DONA (Modalidad)
            var ctxModalidad = document.getElementById("chartModalidad").getContext('2d');
            new Chart(ctxModalidad, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.EtiquetasModalidad)),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(Model.ValoresModalidad)),
                        // Verde (Estadías), Secundario (Servicio Social), Info (DUAL)
                        backgroundColor: ['#009669', '#6c757d', '#0dcaf0'],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    cutout: '60%',
                    plugins: {
                        legend: { position: 'right', labels: { boxWidth: 12, font: { size: 10 } } }
                    }
                }
            });
        });
    </script>
}