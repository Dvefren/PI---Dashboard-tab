                            <td class="text-muted">11</td>
                            <td><span class="badge" style="background-color: #f8d7da; color: #dc3545;">0</span></td>
                            <td><span class="badge" style="background-color: #f8d7da; color: #dc3545;">5</span></td>
                            <td><span class="badge" style="background-color: #fff3cd; color: #856404;">6</span></td>
                            <td><span class="badge" style="background-color: #fff3cd; color: #856404;">2</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // ==========================================
            // 1. INICIALIZAR LA TABLA MÁGICA (DATATABLES)
            // ==========================================
            $('#tablaTutorias').DataTable({
                // Configurar idioma español
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json',
                    search: "BUSCAR:",
                    lengthMenu: "Mostrar _MENU_ registros"
                },
                // Acomodo de elementos (Buscador arriba, paginación abajo)
                dom: '<"row align-items-center mb-3"<"col-md-6"B><"col-md-6 d-flex justify-content-end"f>>rt<"row align-items-center mt-3"<"col-md-6"i><"col-md-6 d-flex justify-content-end"p>>',
                // Configurar el botón de Excel
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="bi bi-file-earmark-excel-fill"></i> Exportar a Excel',
                        className: 'btn btn-utt btn-sm shadow-sm', // Usa nuestra clase verde UTTN
                        title: 'Estadisticas_Por_Grupo_UTTN'
                    }
                ],
                pageLength: 5, // Cuántas filas mostrar por página
                ordering: true // Permite ordenar al hacer clic en los encabezados
            });

            // ==========================================
            // 2. GRÁFICA DE DONA (ARRASTRE)
            // ==========================================
            var ctxDona = document.getElementById("chartDonaArrastre");
            new Chart(ctxDona, {
                type: 'doughnut',
                data: {
                    labels: ["Fuera de Tiempo", "Crítico", "Medio", "En Tiempo"],
                    datasets: [{
                        data: [8, 0, 29, 408],
                        // Colores exactos de tu foto
                        backgroundColor: ['#dc3545', '#ffc107', '#0dcaf0', '#009669'],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    cutout: '65%', // Grosor de la dona
                    plugins: {
                        legend: { position: 'top', labels: { boxWidth: 12, font: { size: 10 } } }
                    }
                }
            });

            // ==========================================
            // 3. GRÁFICA DE BARRAS MAGENTA
            // ==========================================
            var ctxBarras = document.getElementById("chartBarrasArrastre");
            new Chart(ctxBarras, {
                type: 'bar',
                data: {
                    labels: ["TIC", "MECATRÓNICA", "INDUSTRIAL", "ADMINISTRACIÓN", "MANTENIMIENTO"],
                    datasets: [{
                        label: "Materias en Arrastre",
                        data: [64, 155, 20, 58, 45],
                        backgroundColor: "#e83e8c", // El rosa/magenta oficial de tu imagen
                        barPercentage: 0.5 // Hace las barras más delgadas
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { beginAtZero: true, grid: { borderDash: [2, 4] } },
                        x: { grid: { display: false } }
                    }
                }
            });
        });
    </script>
}